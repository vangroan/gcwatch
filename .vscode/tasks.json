{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ruff fix (all)",
            "type": "shell",
            "command": "ruff",
            "args": [
                "check",
                "--fix",
                "*.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "isort (all)",
            "type": "shell",
            "command": "isort",
            "args": [
                "*.py"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
    ]
}